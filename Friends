    <script>

        window.SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
        const recognition = new SpeechRecognition();
        recognition.lang = 'hi-IN'; // set the recognition language to Hindi

        function readOut(message) {
            const speech = new SpeechSynthesisUtterance();
            speech.lang = 'hi-IN'; // set the speech synthesis language to Hindi
            speech.text = message;
            speech.volume = 1;
            speech.rate = 1; // set the speech rate to a slower value (default is 1)
            speech.pitch = 0.8; // set the speech pitch to a deeper value (default is 1)
            window.speechSynthesis.speak(speech);
            console.log("speaking out");
        }



        function submitForm(event) {
            const nameInput = document.getElementById('name');

            if (nameInput.value.trim() !== 'Professor') {
                // alert('You must be a Professor to submit this form!');
                readOut("Access denied")
                event.preventDefault(); // Prevent form submission
            }else{
                readOut("Welcome Professor")
                window.location.href = "https://amiruddin07.github.io/welcome/";
            }
            
        }
    </script>
